{
  "family": "brevity",
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "THIS_WILL_BE_REPLACED_BY_GITHUB_ACTIONS",
      "cpu": 512,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "MODE",
          "value": "release"
        },
        {
          "name": "SERVER_PORT",
          "value": "80"
        },
        {
          "name": "OTEL_RESOURCE_ATTRIBUTES",
          "value": "service.name=backend,service.namespace=brevity,deployment.environment=production"
        },
        {
          "name": "OTEL_EXPORTER_OTLP_ENDPOINT",
          "value": "https://otlp-gateway-prod-us-east-0.grafana.net/otlp"
        },
        {
          "name": "LLM_MODEL_ID",
          "value": "google/gemini-2.5-flash-preview"
        },
        {
          "name": "LLM_BASE_URL",
          "value": "https://openrouter.ai/api/v1/"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "LLM_API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:969026361642:parameter/brevity/llm-api-key"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:969026361642:parameter/brevity/database-url"
        },
        {
          "name": "OTEL_EXPORTER_OTLP_HEADERS",
          "valueFrom": "arn:aws:ssm:us-east-1:969026361642:parameter/brevity/otel-collector-headers"
        }
      ],
      "systemControls": []
    }
  ],
  "executionRoleArn": "arn:aws:iam::969026361642:role/brevity-ecs-execution-20250527104533230800000002",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": []
}
